{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#is "home"}}
    <header class="page-head">
    {{#if @blog.logo}}
    <img class="site-logo" src="{{img_url @blog.logo size="l"}}" alt="{{@blog.title}}" />
    {{else}}
    {{@blog.title}}
    {{/if}}
    {{!-- <h2 class="page-head-title">{{@blog.title}}</h2> --}}
    </header>
{{/is}}

<div class="post-feed">
    {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}

    {{/foreach}}
</div>

